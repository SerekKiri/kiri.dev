<script>
  document.addEventListener("DOMContentLoaded", function () {
    const showMoreBtn = document.getElementById(
      "showMoreBtn"
    ) as HTMLElement | null
    const allStoryImages = document.querySelectorAll(".story-image")
    let isExpanded = false

    if (!showMoreBtn) {
      console.warn("Show more button not found")
      return
    }

    // Function to hide/show images based on screen size and expanded state
    function updateImageVisibility() {
      const isMobile = window.innerWidth <= 1000

      if (!showMoreBtn) return

      if (!isMobile) {
        // Desktop - show all images
        allStoryImages.forEach((img) => {
          img.classList.remove("story-image-hidden")
        })
        showMoreBtn.style.display = "none"
      } else {
        // Mobile/Tablet - show button and manage visibility
        showMoreBtn.style.display = "block"

        if (isExpanded) {
          // Show all images
          allStoryImages.forEach((img) => {
            img.classList.remove("story-image-hidden")
          })
          showMoreBtn.textContent = "Show Less"
        } else {
          // Hide images beyond the limit (CSS will handle the rest)
          allStoryImages.forEach((img, index) => {
            if (window.innerWidth <= 480) {
              // Mobile: show only first 2
              if (index >= 2) {
                img.classList.add("story-image-hidden")
              } else {
                img.classList.remove("story-image-hidden")
              }
            } else {
              // Tablet: show only first 3
              if (index >= 3) {
                img.classList.add("story-image-hidden")
              } else {
                img.classList.remove("story-image-hidden")
              }
            }
          })
          showMoreBtn.textContent = "Show More Stories"
        }
      }
    }

    // Toggle visibility of hidden images
    showMoreBtn.addEventListener("click", function () {
      isExpanded = !isExpanded
      updateImageVisibility()
    })

    // Update image visibility on window resize
    window.addEventListener("resize", function () {
      isExpanded = false // Reset to collapsed state on resize
      updateImageVisibility()
    })

    // Initial setup
    updateImageVisibility()
  })
</script>
